<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0F4F8"
    tools:context=".fragmentDeRecherche.RechercheFragment">

    <!-- EditText pour la recherche -->
    <EditText
        android:id="@+id/nomMedicamentRechercher"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/recherche_un_m_dicament"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textColorHint="#546E7A"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textSize="16sp"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:ignore="HardcodedText,VisualLintTextFieldSize" />

    <!-- LinearLayout horizontal pour le label et le spinner catégorie -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <!-- Label pour la catégorie -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-medium"
            android:text="@string/cat_gorie"
            android:textColor="@color/primaryColor"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <!-- Spinner pour la catégorie -->
        <Spinner
            android:id="@+id/spinnerCategorie"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:importantForAutofill="no"
            android:spinnerMode="dropdown"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

    <!-- LinearLayout horizontal pour le label et le spinner type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <!-- Label pour le type -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:layout_marginRight="80px"
            android:fontFamily="sans-serif-medium"
            android:text="@string/type"
            android:textColor="@color/buttonColor"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <!-- Spinner pour le type -->
        <Spinner
            android:id="@+id/spinnerType"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:importantForAutofill="no"
            android:spinnerMode="dropdown"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />
    </LinearLayout>

    <!-- RecyclerView pour afficher la liste des médicaments -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicamentsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingTop="8dp" />
</LinearLayout>
